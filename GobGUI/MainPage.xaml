<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GobGUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="75">

            <Label 
            Text="Pick an option below:"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>

            <Button
            x:Name="StartOrderBtn"
            Text="Start A New Order" 
    
            Clicked="StartOrderBtn_Clicked"
            HorizontalOptions="Fill" />

            <Button
            x:Name="EditOrderBtn"
            Text="Edit an Existing Order" 
    
            Clicked="EditOrderBtn_Clicked"
            HorizontalOptions="Fill" />

            <Button
                x:Name="ShowOrdersBtn"
                Text="Show All Orders" 
                
                Clicked="ShowOrdersBtn_Clicked"
                HorizontalOptions="Fill" />
            
         
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
